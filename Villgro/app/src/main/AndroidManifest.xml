<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sreesha.android.villgro">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ModulesDashBoard"
            android:label="@string/title_activity_modules_dash_board"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ModuleCourseActivity"
            android:label="@string/title_activity_module_course"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Forum_Connection"
            android:label="@string/title_activity_forum__connection"
            android:parentActivityName=".ModulesDashBoard"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sreesha.android.villgro.ModulesDashBoard" />
        </activity>
    </application>

</manifest>
